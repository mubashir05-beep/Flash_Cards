{
    "version": 2,
    "builds": [
      {
        "src": "client/**",
        "use": "@vercel/static",
        "config": {
          "zeroConfig": true
        }
      },
      {
        "src": "server/**/*.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["src/**/*.ts"],
          "tsconfigPath": "./server/tsconfig.json"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/src/controllers/:1"
      },
      {
        "src": "/(.*)",
        "dest": "/client/:1"
      }
    ]
  }
  