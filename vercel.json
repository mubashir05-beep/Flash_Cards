{
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/dist"
            }
        },
        {
            "src": "server/package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/server/(.*)",
            "dest": "/server/src/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/$1"
        }
    ]
}
