{
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/src/controllers/:1"
        },
        {
            "source": "/server/src/(.*)",
            "destination": "/server/src/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/client/:1"
        }
    ]
}
